{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MPDRNN config",
  "type": "object",
  "properties": {
    "dataset_name": {
      "type": "string",
      "enum": ["connect4", "isolete", "letter", "mnist", "mnist_fashion", "musk2", "optdigits", "page_blocks", "satimages", "segment", "shuttle", "spambase", "usps"],
      "description": "The name of the dataset to be used."
    },
    "activation": {
      "type": "string",
      "enum": ["ReLU", "LeakyReLU", "Tanh", "Sigmoid", "Identity"],
      "description": "The activation function to be used in the neural network."
    },
    "number_of_tests": {
      "type": "integer",
      "description": "Number of tests to be performed."
    },
    "seed": {
      "type": "boolean",
      "description": "Controls the way to generate random values. If set to True, the same values will be generated in every execution."
    },
    "method": {
      "type": "string",
      "enum": ["BASE", "EXP_ORT", "EXP_ORT_C"],
      "description": "The method to generate new weights in consecutive layers."
    },
    "mu": {
      "type": "number",
      "const": 0,
      "description": "The mean of a uniform distribution is the midpoint of the interval."
    },
    "sigma": {
      "type": "number",
      "default": 0.15,
      "description": "The standard deviation of a uniform distribution is a measure of the spread of the distribution."
    },
    "eq_neurons": {
      "type": "object",
      "description": "Number of equal neurons.",
      "properties": {
        "connect4": {
          "type": "array"
        },
        "isolete": {
          "type": "array"
        },
        "letter": {
          "type": "array"
        },
        "mnist": {
          "type": "array"
        },
        "mnist_fashion": {
          "type": "array"
        },
        "musk2": {
          "type": "array"
        },
        "optdigits": {
          "type": "array"
        },
        "page_blocks": {
          "type": "array"
        },
        "satimages": {
          "type": "array"
        },
        "segment": {
          "type": "array"
        },
        "shuttle": {
          "type": "array"
        },
        "spambase": {
          "type": "array"
        },
        "usps": {
          "type": "array"
        }
      }
    },
    "exp_neurons": {
      "type": "object",
      "description": "Number of equal neurons.",
      "properties": {
        "connect4": {
          "type": "array"
        },
        "isolete": {
          "type": "array"
        },
        "letter": {
          "type": "array"
        },
        "mnist": {
          "type": "array"
        },
        "mnist_fashion": {
          "type": "array"
        },
        "musk2": {
          "type": "array"
        },
        "optdigits": {
          "type": "array"
        },
        "page_blocks": {
          "type": "array"
        },
        "satimages": {
          "type": "array"
        },
        "segment": {
          "type": "array"
        },
        "shuttle": {
          "type": "array"
        },
        "spambase": {
          "type": "array"
        },
        "usps": {
          "type": "array"
        }
      }
    }
  },
  "required": ["dataset_name", "activation", "number_of_tests", "seed", "method"]
}
