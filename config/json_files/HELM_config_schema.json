{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HELM Configuration",
  "type": "object",
  "properties": {
    "dataset_name": {
      "type": "string",
      "enum": ["adult", "cifar10", "connect4", "isolete", "letter", "mnist", "mnist_fashion", "musk2", "optdigits",
        "page_blocks", "satimages", "segment", "shuttle", "spambase", "usps", "wall", "waveform"],
      "description": "The name of the dataset to be used."
    },
    "seed": {
      "type": "boolean",
      "description": "Controls the way to generate random values. If set to True, the same values will be generated in every execution."
    },
    "hidden_neurons": {
      "type": "object",
      "description": "Number of hidden nodes in the hidden layers for different datasets.",
      "properties": {
        "adult": {
          "type": "array"
        },
        "cifar10": {
          "type": "array"
        },
        "connect4": {
          "type": "array"
        },
        "isolete": {
          "type": "array"
        },
        "letter": {
          "type": "array"
        },
        "mnist": {
          "type": "array"
        },
        "mnist_fashion": {
          "type": "array"
        },
        "musk2": {
          "type": "array"
        },
        "optdigits": {
          "type": "array"
        },
        "page_blocks": {
          "type": "array"
        },
        "satimages": {
          "type": "array"
        },
        "segment": {
          "type": "array"
        },
        "shuttle": {
          "type": "array"
        },
        "spambase": {
          "type": "array"
        },
        "usps": {
          "type": "array"
        },
        "wall": {
          "type": "array"
        },
        "waveform": {
          "type": "array"
        }
      }
    },
    "penalty": {
      "type": "object",
      "description": "Number of hidden nodes in the hidden layers for different datasets.",
      "properties": {
        "adult": {
          "type": "number"
        },
        "cifar10": {
          "type": "number"
        },
        "connect4": {
          "type": "number"
        },
        "isolete": {
          "type": "number"
        },
        "letter": {
          "type": "number"
        },
        "mnist": {
          "type": "number"
        },
        "mnist_fashion": {
          "type": "number"
        },
        "musk2": {
          "type": "number"
        },
        "optdigits": {
          "type": "number"
        },
        "page_blocks": {
          "type": "number"
        },
        "satimages": {
          "type": "number"
        },
        "segment": {
          "type": "number"
        },
        "shuttle": {
          "type": "number"
        },
        "spambase": {
          "type": "number"
        },
        "usps": {
          "type": "number"
        },
        "wall": {
          "type": "number"
        },
        "waveform": {
          "type": "number"
        }
      }
    },
    "scaling_factor": {
      "type": "object",
      "description": "Number of hidden nodes in the hidden layers for different datasets.",
      "properties": {
        "adult": {
          "type": "number"
        },
        "cifar10": {
          "type": "number"
        },
        "connect4": {
          "type": "number"
        },
        "isolete": {
          "type": "number"
        },
        "letter": {
          "type": "number"
        },
        "mnist": {
          "type": "number"
        },
        "mnist_fashion": {
          "type": "number"
        },
        "musk2": {
          "type": "number"
        },
        "optdigits": {
          "type": "number"
        },
        "page_blocks": {
          "type": "number"
        },
        "satimages": {
          "type": "number"
        },
        "segment": {
          "type": "number"
        },
        "shuttle": {
          "type": "number"
        },
        "spambase": {
          "type": "number"
        },
        "usps": {
          "type": "number"
        },
        "wall": {
          "type": "number"
        },
        "waveform": {
          "type": "number"
        }
      }
    },
    "num_tests": {
      "type": "integer",
      "description": "How many times a test should be repeated."
    }
  },
  "hyperparamtuning": {
      "type": "object",
      "description": "Hyperparameter tuning configuration.",
      "properties": {
        "metric": {
          "type": "string",
          "description": "Metric to optimize during hyperparameter tuning."
        },
        "mode": {
          "type": "string",
          "enum": ["min", "max"],
          "description": "Mode of the metric: 'min' to minimize, 'max' to maximize."
        },
        "grace_period": {
          "type": "integer",
          "description": "Minimum number of iterations a trial must complete before it can be stopped early."
        },
        "reduction_factor": {
          "type": "number",
          "description": "Factor by which to reduce the number of trials at each decision point."
        },
        "num_samples": {
          "type": "integer",
          "description": "Number of different configurations to sample from the search space."
        },
        "num_resources": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "integer",
              "description": "Number of CPU resources allocated per trial."
            },
            "gpu": {
              "type": "integer",
              "description": "Number of GPU resources allocated per trial."
            }
          },
          "required": ["cpu", "gpu"]
        },
        "C_penalty": {
          "type": "object",
          "properties": {
            "from": {
              "type": "number",
              "description": "Starting range for the C_penalty hyperparameter."
            },
            "to": {
              "type": "number",
              "description": "Ending range for the C_penalty hyperparameter."
            }
          },
          "required": ["from", "to"]
        },
        "scaling_factor": {
          "type": "object",
          "properties": {
            "from": {
              "type": "number",
              "description": "Starting range for the scaling_factor hyperparameter."
            },
            "to": {
              "type": "number",
              "description": "Ending range for the scaling_factor hyperparameter."
            }
          },
          "required": ["from", "to"]
        }
      },
      "required": ["metric", "mode", "max_t", "grace_period", "reduction_factor", "num_samples", "num_resources", "C_penalty", "scaling_factor"]
    },
  "required": ["dataset_name", "seed", "penalty", "hidden_neurons", "scaling_factor", "num_tests"]
}
