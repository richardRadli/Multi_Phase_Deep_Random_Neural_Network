{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HELM Configuration",
  "type": "object",
  "properties": {
    "dataset_name": {
      "type": "string",
      "enum": ["connect4", "isolete", "letter", "mnist", "mnist_fashion", "musk2", "optdigits", "page_blocks", "satimages", "segment", "shuttle", "spambase", "usps"],
      "description": "The name of the dataset to be used."
    },
    "seed": {
      "type": "boolean",
      "description": "Controls the way to generate random values. If set to True, the same values will be generated in every execution."
    },
    "hidden_neurons": {
      "type": "object",
      "description": "Number of hidden nodes in the hidden layers for different datasets.",
      "properties": {
        "connect4": {
          "type": "array"
        },
        "isolete": {
          "type": "array"
        },
        "letter": {
          "type": "array"
        },
        "mnist": {
          "type": "array"
        },
        "mnist_fashion": {
          "type": "array"
        },
        "musk2": {
          "type": "array"
        },
        "optdigits": {
          "type": "array"
        },
        "page_blocks": {
          "type": "array"
        },
        "satimages": {
          "type": "array"
        },
        "segment": {
          "type": "array"
        },
        "shuttle": {
          "type": "array"
        },
        "spambase": {
          "type": "array"
        },
        "usps": {
          "type": "array"
        }
      }
    },
    "penalty": {
      "type": "number",
      "description": ""
    },
    "scaling_factor": {
      "type": "number",
      "description": ""
    },
    "num_tests": {
      "type": "integer",
      "description": "How many times a test should be repeated."
    }
  },
  "required": ["dataset_name", "seed", "penalty", "hidden_neurons", "scaling_factor", "num_tests"]
}
